  "author": "jero <aneurysmjs@outlook.com>",
  "license": "MIT",
  "type": "module",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "build": "node scripts/build.mjs",
    "build-clean": "rimraf './packages/*/build' './packages/*/dist' './packages/*/tsconfig.tsbuildinfo'",
    "commit": "git-cz",
    "jscodeshift": "node node_modules/.bin/jscodeshift",
    "test": "jest",
    "test:esm": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "watch": "node scripts/watch.mjs"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "engines": {
    "node": "^16.10.0 || >=18.0.0"
  },
  "dependencies": {
    "chalk": "4.1.0",
    "jscodeshift": "0.13.1",
    "ramda": "0.27.1",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@tsconfig/node16-strictest": "1.0.3",
    "@types/jest": "29.0.2",
    "@types/jscodeshift": "0.11.5",
    "@types/ramda": "0.28.15",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "chokidar": "^3.5.3",
    "commitizen": "4.2.2",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^8.38.0",
    "execa": "^6.1.0",
    "graceful-fs": "^4.2.10",
    "jest": "29.0.3",
    "lerna": "3.22.1",
    "p-limit": "^4.0.0",
    "prettier": "2.2.1",
    "rimraf": "^3.0.2",
    "strip-json-comments": "^5.0.0",
    "ts-jest": "29.0.1",
    "typescript": "4.8.3"
  },
  "packageManager": "yarn@3.5.0"
}
