  "license": "MIT",
  "type": "module",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "build": "node scripts/build.mjs",
    "build-clean": "rimraf './packages/*/build' './packages/*/dist' './packages/*/tsconfig.tsbuildinfo'",
    "commit": "git-cz",
    "jscodeshift": "node node_modules/.bin/jscodeshift",
    "test": "jest",
    "test:esm": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "watch": "node scripts/watch.mjs"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "engines": {
    "node": "^16.10.0 || >=18.0.0"
  },
  "dependencies": {
    "chalk": "5.3.0",
    "jscodeshift": "0.15.0",
    "ramda": "0.29.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@tsconfig/node16-strictest": "1.0.4",
    "@types/jest": "29.5.5",
    "@types/jscodeshift": "0.11.7",
    "@types/ramda": "0.29.4",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "chokidar": "^3.5.3",
    "commitizen": "4.3.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^8.50.0",
    "execa": "^8.0.1",
    "graceful-fs": "^4.2.11",
    "jest": "29.7.0",
    "lerna": "7.3.0",
    "p-limit": "^4.0.0",
    "prettier": "3.0.3",
    "rimraf": "^5.0.1",
    "strip-json-comments": "^5.0.1",
    "ts-jest": "29.1.1",
    "typescript": "5.2.2"
  },
  "packageManager": "yarn@3.5.0"
}
